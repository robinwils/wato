root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.{cpp,cc,cxx,h,hpp,hxx}]
indent_style = space
indent_size = 4

[{CMakeLists.txt,*.cmake,*.rst}]
indent_size = 2
indent_style = space
